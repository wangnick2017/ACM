<Window x:Class="ACM.Dialogs.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACM"
        mc:Ignorable="d"
        Title="ACM" Height="300" Width="300" Style="{StaticResource ACMDialogStyle}" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <Button Style="{StaticResource PageButtonStyle}" Content="{DynamicResource ok}" IsDefault="True" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Padding="30,10" Click="Button_Click"/>
        <TextBlock FontWeight="Light" x:Name="txt" TextWrapping="Wrap" Margin="20,20,20,70" FontSize="18"/>

    </Grid>
</Window>
